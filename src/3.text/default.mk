#----------------------------------------------------------------------------
# Destination directory for binaries and class libraries
#----------------------------------------------------------------------------

PREFIX_DIR	= ../..

OUT		= posix_regex

#----------------------------------------------------------------------------
# Compiler and linker options.
#----------------------------------------------------------------------------

CC			= gcc
CFLAGS		= -Wall -g

CPPFLAGS	= -I$(PREFIX_DIR)/include
FPICFLAGS	= -fPIC 
LDSOFLAGS	= -G -dy

LOADLIBES	= -L$(PREFIX_DIR)/lib
LDLIBS		= 

MAKE		= make
#----------------------------------------------------------------------------
# user defined macros
#----------------------------------------------------------------------------
SRCS        = $(wildcard *.c)
OBJS        = $(patsubst %.c,%.o,$(SRCS))
DEPENDENCY  = dep.mk

#----------------------------------------------------------------------------
# Default target.
#----------------------------------------------------------------------------
.PHONY: all clean dep

all: $(OUT)

#----------------------------------------------------------------------------
# Suffix rules
#----------------------------------------------------------------------------
.SUFFIXES: 
.SUFFIXES: .c .o
.PRECIOUS: .o

#----------------------------------------------------------------------------
# Build binaries
#----------------------------------------------------------------------------

#----------------------------------------------------------------------------
# others
#----------------------------------------------------------------------------
clean:
	-rm -f *.o core core.* $(DEPENDENCY) $(OUT)

-include $(DEPENDENCY)
