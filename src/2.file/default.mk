#----------------------------------------------------------------------------
# Destination directory for binaries and class libraries
#----------------------------------------------------------------------------
PREFIX_DIR	= ../..

OUT		= open_fd linked_ch ind_ch \
		  xdr_fmt xdr_fmt2 \
		  struct_padding struct_packed \
		  open64_fd

#----------------------------------------------------------------------------
# Compiler and linker options.
#----------------------------------------------------------------------------

CC			= gcc
CFLAGS		= -Wall -g

CPPFLAGS	= -I$(PREFIX_DIR)/include
FPICFLAGS	= -fPIC 
LDSOFLAGS	= -G -dy

LOADLIBES	= -L$(PREFIX_DIR)/lib
LDLIBS		= 

MAKE		= make

#----------------------------------------------------------------------------
# user defined macros
#----------------------------------------------------------------------------
SRCS        = $(wildcard *.c)
OBJS        = $(patsubst %.c,%.o,$(SRCS))
DEPENDENCY  = dep.mk

#----------------------------------------------------------------------------
# Default target.
#----------------------------------------------------------------------------
.PHONY: all clean dep

all: $(OUT)

#----------------------------------------------------------------------------
# Suffix rules
#----------------------------------------------------------------------------
.SUFFIXES: 
.SUFFIXES: .c .o

#----------------------------------------------------------------------------
# Build binaries
#----------------------------------------------------------------------------
open64_fd : open64_fd.c
	$(CC) -D_FILE_OFFSET_BITS=64 $(CFLAGS) $< -o $@

#----------------------------------------------------------------------------
# others
#----------------------------------------------------------------------------
clean:
	-rm -f *.o core core.* *.log $(DEPENDENCY) $(OUT)

-include $(DEPENDENCY)
